<h1>Dogs#edit</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div>
        <h2 class="center">Edit Profile</h2>
      </div>
      <div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :breed %>
            <%= f.input :size %>
            <%= f.input :personality %>
            <%= f.input :age %>
            <%= f.input :gender %>
          <div class="form-actions center">
            <%= f.submit "Update", :class => "service-button" %>
            <%= link_to "Back", :back, :class => "service-button" %>
            <%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "service-button"%>
          </div>
        <% end %>
      </div>
      <div class="edit-flexbox">
      </div>
    </div>
  </div>
</div>
