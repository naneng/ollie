
  <div class="dog-index">
  <%= link_to "Home", root_path %>
  <%= link_to "View Ollie Friends", users_path %>
  </div>

    <div class="center">
      <h2>Ollie Dog</h2>
      </div>
    <div class="container">


      <div class="row">
        <% @dogs.each do |dog| %>
        <%= link_to dog_path(dog) do %>
        <div class="col col-xs-12 col-sm-4">
           <div class="dog-avatar">
          <img class ="dog dog-request-card" src="<%= dog.user.photo %>" alt="">
            </div>

          <div class="card-dog">

            <p class="card-title dog-request-card">
            <%= dog.name %>

            </p>

            <div class="card-text">
              <h4><%= dog.breed %> | <%= dog.age %> | <%= dog.size %></h4>
              <p><%= dog.personality %></p>
            </div>




          </div>
        </div>
         <% end %>
         <% end %>
       </div>
    </div>

<%= link_to "new dog", new_dog_path(@user)  %>


