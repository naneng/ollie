<div class="dog-index">
</div>
<div class="center add-dog">
  <h2>Ollie Dog  </h2>
</div>
<div class="container">
  <%= image_tag "doghouse.png", id: "doghouse" %>
  <div class="row">
    <div class="col col-xs-12">
      <% @dogs.each do |dog| %>
        <figure class="snip1336 prettydogs">
          <img src="https://images.pexels.com/photos/158063/bellingrath-gardens-alabama-landscape-scenic-158063.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="sample87" class="dogpark" />
          <figcaption>
            <img src="<%= dog.user.photo %>" alt="profile-sample4" class="profile"/>
            <h2><%= dog.name %><span> <%= dog.breed %></span></h2>
            <a <%= link_to dog_path(dog) do %> View Profile</a>
            <% end %>
          </figcaption>
        </figure>
      <% end %>
    </div>
  </div>
  <div class="center">
    <%= link_to "Home", root_path, class: 'user-text-links' %>
    <%= link_to "View OllieFriends", users_path, class: 'user-text-links' %>
  </div>
</div>
