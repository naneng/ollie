<div data-user=<%= user.id %>>
  <% if user_signed_in? %>
    <% if current_user.is_following?(user.id) %>
      <%= link_to '<i class="fas fa-user-times"></i>'.html_safe, unfollow_user_path(user.id), method: :post, remote: true %>
    <% else %>
      <%= link_to '<i class="fas fa-user-plus"></i>'.html_safe, follow_user_path(user.id), method: :post, remote: true %>
    <% end %>
  <% end %>
</div>
