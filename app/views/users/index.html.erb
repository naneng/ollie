<div class="user-container">
  <div class="center">
    <%= link_to users_path do %>
      <%= button_tag "OllieMembers", class: "btn #{params[:partner] ? 'btn-default' : 'btn-primary'}" %>
    <% end %>
    <%= link_to users_path(partner: true) do %>
      <%= button_tag "OlliePartners", class: "btn #{params[:partner] ? 'btn-primary' : 'btn-default'}" %>
    <% end %>
  </div>
  <div class="container user-title">
    <h1 class="center">OllieMembers</h1>
    <div class="cards">
      <% @users.individuals.each do |user| %>
        <div class="card">
          <%= link_to user_path(user) do %>
            <div class="user-picture">
              <% if user.photo? %>
                <%= image_tag user.photo %>
              <% else %>
                <%= image_tag "small-dog-icondog.jpg" %>
              <% end %>
              <div class="card-description">
                <p><%= user.name %></p>
                <p><%= user.phone%></p>
              </div>
            </div>
          <% end %>
          <div class="follow">
            <ul>
              <%= render user %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% if params[:partner] %>
    <div class="container user-title">
      <h1 class="center">OlliePartners</h1>
      <div class="cards">
        <% @users.organizations.each do |user| %>
          <div class="card relative">
            <%= link_to user_path(user) do %>
              <div class="user-picture">
                <% if user.photo? %>
                  <%= image_tag user.photo %>
                <% else %>
                  <%= image_tag "small-dog-icondog.jpg" %>
                <% end %>
                <div class="card-description">
                  <p><%= user.name %></p>
                  <p><%= user.phone%></p>
                </div>
              </div>
            <% end %>
            <div class="follow">
              <ul>
                <%= render user %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <p class="center"><%= link_to "Home", root_path, class: 'user-text-links' %></p>
</div>