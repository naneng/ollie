<div class="user-container">
  <div class="container">
    <h1>List of Not-for-Profits, Drivers and Dog Owners</h1>
    <div class="row">
      <% @users.each do |user| %>
        <div class="card">
          <%= link_to user_path(user) do %>
            <div class="user-picture">
              <% if user.photo? %>
                <%= image_tag user.photo %>
              <% else %>
                <%= image_tag "small-dog-icondog.jpg" %>
              <% end %>
              <div>
                <p><%= user.name %></p>
                <p><%= user.location %></p>
                <p><%= user.email %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= link_to "Home", root_path %>
  </div>