<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path do%>
    <%=  image_tag "greensmalldog.png", id: "logo-nav" %>
  <% end %>
  <div class="search">
    <section class="webdesigntuts-workshop">
      <form action="/users" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <input type="text" name="query" id="query" class="form-control" placeholder="Locate a shelter" />
        <button>Search</button>
      </form>
    </section>
  </div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <%= link_to "Transport Requests", requests_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Create Request", new_request_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% else %>
      <%= link_to "Become a Partner", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Join Ollieboard", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Log In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_signed_in?  %>
          <% avatar_url = current_user.facebook_picture_url || 'doghouse.png' %>
          <%= image_tag avatar_url, class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', "data-toggle": 'dropdown'  %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% unless user_signed_in? != true%>
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
